<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Shopify</title>
    
    <!-- Font Awesome for Icons -->
     
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  
  <body>
    <!-- Navbar -->
    <%- include('includes/navbar') %>

    <!-- Flash Messages -->
    <% if (flashmsg && flashmsg.length>0) { %>
      
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong><%=flashmsg%></strong> 
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>
    <% if (errmsg && errmsg.length>0) { %>
      
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong><%=errmsg%></strong> 
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>
    <!-- Category Links as Buttons -->
    <div class="container my-4">
      <div class="d-flex justify-content-center mb-3">
        <div class="p-2">
          <a href="/home?category=electronics" class="btn btn-outline-primary">Electronics</a>
        </div>
        <div class="p-2">
          <a href="/home?category=jewelery" class="btn btn-outline-primary">Jewelry</a>
        </div>
        <div class="p-2">
          <a href="/home?category=women's clothing" class="btn btn-outline-primary">Women's Clothing</a>
        </div>
        <div class="p-2">
          <a href="/home?category=men's clothing" class="btn btn-outline-primary">Men's Clothing</a>
        </div>
      </div>
    </div>

    <!-- Main Content -->
    <div class="container">
      <%- body -%>
    </div>
    
    <!-- Footer (Optional) -->
    <footer class="bg-dark text-white text-center py-3 mt-5">
      <p>&copy; 2024 E-Shop. All Rights Reserved.</p>
      <a href="#" class="text-white me-3"><i class="fab fa-facebook-f"></i></a>
      <a href="#" class="text-white me-3"><i class="fab fa-instagram"></i></a>
      <a href="#" class="text-white"><i class="fab fa-twitter"></i></a>
    </footer>
    
    <!-- Bootstrap JavaScript Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>
