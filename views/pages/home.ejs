<% layout('boilerplate') -%>

<div class="container my-5">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
        <% for (let i = 0; i < data.length; i++) { %>
        <a href="/detail/<%= data[i].id %>" style="text-decoration: none;">
            <div class="card shadow-sm border rounded-3 h-100">
                <img src="<%= data[i].image %>" class="card-img-top" alt="<%= data[i].title %>" onError="this.onerror=null;this.src='https://via.placeholder.com/150';">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title text-truncate" title="<%= data[i].title %>">
                        <%= data[i].title %>
                    </h5>
                    <p class="card-text text-muted">
                        <%= data[i].category %>
                    </p>
                    <p class="card-text mt-auto">
                        <span class="text-primary fw-bold"><%= data[i].price %></span>
                    </p>
                </div>
            </div>
        </a>
        <% } %>
    </div>
</div>
