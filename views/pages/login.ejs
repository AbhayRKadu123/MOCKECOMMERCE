<% layout('boilerplate') -%>

<!-- Centered Container for Form -->
<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
  <form action="/login" method="post" class="p-4 rounded shadow-lg" style="width: 100%; max-width: 400px; background-color: #f8f9fa;">
    <h3 class="mb-4 text-center">Login to Your Account</h3>
    
    <div class="mb-3">
      <label for="username" class="form-label">Username</label>
      <div class="input-group">
        <span class="input-group-text"><i class="fas fa-user"></i></span>
        <input name="username" type="text" class="form-control" id="username" placeholder="Enter your username">
      </div>
    </div>
    
    <div class="mb-3">
      <label for="password" class="form-label">Password</label>
      <div class="input-group">
        <span class="input-group-text"><i class="fas fa-lock"></i></span>
        <input name="password" type="password" class="form-control" id="password" placeholder="Enter your password">
      </div>
    </div>
    
    <div class="d-grid mb-3">
      <button type="submit" class="btn btn-primary btn-lg">Login</button>
    </div>
    
    <!-- Option to Register -->
    <p class="text-center">Don't have an account? <a href="/register" class="text-primary">Register here</a></p>
  </form>
</div>

<!-- Font Awesome for Icons -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
